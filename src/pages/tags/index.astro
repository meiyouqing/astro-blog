---
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPosts = import.meta.glob("../posts/*.md", { eager: true });
const uniqTags = [...new Set(Object.values(allPosts).flatMap((post: any) => post.frontmatter.tags))];
const pageTitle = "Available Tags Index";
---

<BaseLayout pageTitle={pageTitle}>
  <h2>Available Tags</h2>
  <ul class="tags">
    {
      uniqTags.map((tag) => (
        <li class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </li>
      ))
    }
  </ul>

  {uniqTags.length === 0 && <p>No tags available.</p>}
</BaseLayout>

<style>
  a {
    color: #00539f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
</style>
